<div class="container-fluid mb-5 pt-2 pb-2" id="title-layout">
    <div class="title text-center">
        <h1 id="text-1">PEMILIHAN MAHASISWA</h1>
        <h3 id="text-2">PRESIDEN DAN WAKIL PRESIDEN BEM</h3>
    </div>
</div>

<div class="container-fluid ps-4 pb-2">
    <div class="row g-0 text-center">
        <% candidates.forEach(candidate=> { %>
        <div class="col-md-6 col-sm-12 d-flex">
            <div class="candidate-layout me-4 mb-4">
                <h5 class="mt-2 mb-3"><%= candidate.candidateNumber %></h5>
                <img src="/images/candidates/<%= candidate.candidateImage %>" alt="candidateImage" class="candidate-image">
                <h5 class="mt-3"><%= candidate.presidentName %> & <%= candidate.vpresidentName %></h5>
                <div class="button mt-3 mb-4">
                    <form action="/voting" method="post">
                        <button type="submit" class="btn btn-vote" name="vote" value="<%= candidate.candidateNumber %>">Pilih</button>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>