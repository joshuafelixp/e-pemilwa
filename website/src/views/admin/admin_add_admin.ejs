<div class="container px-4 pt-2">
  <h3 class="text-center">Tambah Admin</h3>

  <form action="/admin/admin/add" method="post">
    <div class="mb-3">
      <label for="input_username" class="form-label">Username</label>
      <input type="text" class="form-control" id="input_username" name="username" autocomplete="off" required>
    </div>
    <div class="mb-3">
      <label for="input_password" class="form-label">Password</label>
      <input type="password" class="form-control" id="input_password" name="password" autocomplete="off" required>
    </div>
    <button type="submit" class="btn btn-primary">Simpan</button>
  </form>
  <a href="/admin/admin"><button type="button" class="btn btn-danger">Batal</button></a>
</div>